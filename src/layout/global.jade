        ul
          each vals in nav_minor
            li
              a(href="#{vals.url}").nav-minor__link= vals.page
      .header__logo-box
        .header__logo
          include ../inc/logo
    
    .container.cd-main-content
      include ../inc/header
      //-
      //- Extend 'content'      
      block content
      //-
