//- This is the base template for all the pages in the site
//- Luckly, this site only needs one layout(base-layout)
//-
doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
    //- 
    //- This is a block for handling page specific Titles and Descriptions
    block seo
    //-
    //-
    link(href="http://fonts.googleapis.com/css?family=Playfair+Display:400,400italic", rel="stylesheet", type="text/css")
    link(href="http://fonts.googleapis.com/css?family=News+Cycle:400,700", rel="stylesheet", type="text/css")
      
    link(rel='stylesheet', type='text/css', href='/style.css')
      
    link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/evil-icons/1.7.2/evil-icons.min.css')
    script(src='//cdnjs.cloudflare.com/ajax/libs/evil-icons/1.7.2/evil-icons.min.js')
      
    script(src='/javascript/vendor/modernizr.js')
